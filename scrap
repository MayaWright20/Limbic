 const [conversation, setConversation] = useState<any>([CHAT_BOT_DATA[0]]);
  const [showTextInputLayout, setShowTextInputLayout] = useState<boolean>(CHAT_BOT_DATA[0].userInput === USER_INPUT.TEXT_INPUT);
  const [text, onChangeText] = useState<string>('');
  const [currentStep, setCurrentStep] = useState<number>(0);
  const dispatch = useDispatch<AppDispatch>();

  const onPressTextInput = () => {
    console.log('onPressTextInput');
    const updatedConversation = [...conversation, {
      message: text,
      user: true,
      botDelay: 500,
      trigger: currentStep + 1
    }];
    setConversation(updatedConversation);
    
    if (currentStep === 0) {
      const name = text;
      dispatch(incrementAsync(name)).then(() => {
        const nextMessage = {
          ...CHAT_BOT_DATA[currentStep + 1],
          message: CHAT_BOT_DATA[currentStep + 1].message.replace('{first_name}', name)
        };
        setConversation([...updatedConversation, nextMessage]);
        setCurrentStep(currentStep + 1);
        setShowTextInputLayout(CHAT_BOT_DATA[currentStep + 1].userInput === USER_INPUT.TEXT_INPUT);
      });
    } else {
      setConversation([...updatedConversation, CHAT_BOT_DATA[currentStep + 1]]);
      setCurrentStep(currentStep + 1);
      setShowTextInputLayout(CHAT_BOT_DATA[currentStep + 1].userInput === USER_INPUT.TEXT_INPUT);
    }
    onChangeText('');
  };
